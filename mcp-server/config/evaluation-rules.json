{
  "minimum_requirements": {
    "min_length": 300,
    "require_data_points": true,
    "require_source_attribution": true,
    "require_technical_details": true,
    "max_age_days": 7,
    "min_credibility_score": 0.85
  },
  "comment": "提高最低要求：增加最小长度至300字，要求必须包含技术细节，可信度≥0.85",
  "scoring_weights": {
    "source_credibility": 0.4,
    "content_completeness": 0.25,
    "timeliness": 0.15,
    "content_quality": 0.2
  },
  "quality_thresholds": {
    "high": 0.85,
    "medium": 0.75,
    "low": 0.6,
    "accept_threshold": 0.85
  },
  "comment": "提高质量标准：只接受可信度≥0.85的资讯，确保高质量内容",
  "red_flags": {
    "excessive_hype": {
      "keywords": [
        "revolutionary",
        "game-changing",
        "breakthrough of the century",
        "world's first",
        "unprecedented",
        "revolutionary breakthrough",
        "颠覆性",
        "史无前例",
        "世界首创"
      ],
      "penalty": 0.1,
      "max_count": 3
    },
    "lack_of_details": {
      "indicators": [
        "no_technical_details",
        "no_data_points",
        "vague_descriptions"
      ],
      "penalty": 0.15
    },
    "no_source": {
      "penalty": 0.2
    },
    "clickbait_patterns": {
      "patterns": [
        "you won't believe",
        "shocking",
        "mind-blowing",
        "scientists hate",
        "不敢相信",
        "震惊",
        "颠覆认知"
      ],
      "penalty": 0.15
    }
  },
  "value_indicators": {
    "technical_details": {
      "weight": 0.2,
      "indicators": [
        "algorithm",
        "architecture",
        "performance metrics",
        "benchmark results",
        "technical specifications"
      ]
    },
    "data_metrics": {
      "weight": 0.2,
      "indicators": [
        "percentage",
        "numbers",
        "statistics",
        "comparison data"
      ]
    },
    "industry_impact": {
      "weight": 0.2,
      "indicators": [
        "market impact",
        "industry adoption",
        "use cases",
        "commercial applications"
      ]
    },
    "innovation_level": {
      "weight": 0.2,
      "indicators": [
        "novel approach",
        "first of its kind",
        "significant improvement",
        "paradigm shift"
      ]
    },
    "relevance": {
      "weight": 0.2,
      "indicators": [
        "ai programming",
        "ai chips",
        "quantum computing",
        "robotics",
        "generative ai"
      ]
    }
  },
  "content_analysis": {
    "required_sections": [
      "background",
      "technical_details",
      "implications"
    ],
    "optional_sections": [
      "code_examples",
      "performance_data",
      "use_cases",
      "future_outlook"
    ]
  },
  "duplicate_detection": {
    "similarity_threshold": 0.8,
    "check_fields": [
      "title",
      "key_points",
      "main_content"
    ]
  }
}

