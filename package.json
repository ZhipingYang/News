{
  "name": "ai-news-collection",
  "version": "4.0.0",
  "description": "AI news collection and deep analysis system with WebSearch",
  "type": "module",
  "scripts": {
    "collect": "node mcp-server/tools/collect-news.js",
    "dedupe": "node mcp-server/tools/deduplicate-news.js",
    "filter": "node mcp-server/tools/filter-news.js",
    "outline": "node mcp-server/tools/generate-outline.js",
    "build": "node static-site/generator.js",
    "serve": "npx http-server docs -p 8080 -o",
    "setup": "npm install && cd mcp-server && npm install && cd ..",
    "clean": "rm -rf docs/*",
    "dev": "npm run build && npm run serve"
  },
  "keywords": [
    "ai",
    "news",
    "mcp",
    "static-site"
  ],
  "author": "ZhipingYang",
  "license": "MIT",
  "dependencies": {
    "marked": "^12.0.0"
  },
  "devDependencies": {
    "http-server": "^14.1.1"
  },
  "workspaces": [
    "mcp-server"
  ],
  "engines": {
    "node": ">=18.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/ZhipingYang/News.git"
  }
}

